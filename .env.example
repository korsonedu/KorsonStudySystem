# 统一环境配置文件示例
# 此文件包含前后端共享的环境变量
# 复制此文件为.env并修改敏感信息

# 环境标识
ENVIRONMENT=development  # development, production, test

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=True  # 生产环境应设置为False

# 前端服务器配置
FRONTEND_PROTOCOL=http
FRONTEND_HOST=localhost
FRONTEND_PORT=5173
FRONTEND_BASE_PATH=
FRONTEND_URL=http://localhost:5173

# 后端服务器配置
BACKEND_PROTOCOL=http
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_BASE_PATH=

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/KorsonStudySystem
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# 安全配置
SECRET_KEY=change_this_to_a_secure_random_key_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# CORS配置
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# 邮件配置
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=your_email@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.example.com
MAIL_TLS=True
MAIL_SSL=False

# API请求配置
API_TIMEOUT=30000
API_RETRY_COUNT=3
API_RETRY_DELAY=1000
API_WITH_CREDENTIALS=false
API_CACHE_CONTROL=no-cache
PROD_API_TIMEOUT=60000

# 日志配置
LOG_LEVEL=info  # debug, info, warning, error, critical

# 时区配置
TIMEZONE=Asia/Shanghai
TIMEZONE_OFFSET=8

# 应用配置
APP_NAME=科晟智慧学习系统
APP_DESCRIPTION=帮助你追踪学习时间和进度的工具
APP_VERSION=1.0.0

# 番茄钟配置
DEFAULT_POMODORO_TIME=25
DEFAULT_BREAK_TIME=5
