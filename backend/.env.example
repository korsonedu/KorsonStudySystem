# 后端环境变量示例文件
# 复制此文件为 .env 并根据需要修改

# 环境配置
ENVIRONMENT=development  # development, production, test

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=True  # 生产环境应设置为False

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/studytool
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# 安全配置
SECRET_KEY=your-secret-key-here  # 生产环境应使用强随机密钥
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24小时
ALGORITHM=HS256

# CORS配置
FRONTEND_URL=http://localhost:5173  # 前端URL，用于CORS配置

# 邮件配置
MAIL_USERNAME=korsonedu@gmail.com
MAIL_PASSWORD=your-mail-password
MAIL_FROM=korsonedu@gmail.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=True
MAIL_SSL=False

# 日志配置
LOG_LEVEL=info  # debug, info, warning, error, critical
